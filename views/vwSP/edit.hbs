<div class="card">
  <h5 class="card-header">Thay đổi thông tin sản phẩm</h5>
  <div class="card-body">
        <form method="post">
          <div class="form-group">
              <label for="TenspID" >Tên sản phẩm</label>
              <input type="text" name="TenSanPham" value="{{info.TenSanPham}}" class="form-control" id="TenspID">
          </div>
          <div class="form-group">
              <label for="GiaTienID">Giá tiền</label>
              <input type="number" name="GiaTien" value="{{info.GiaTien}}" class="form-control" id="GiaTienID">
          </div>
 
          <div class="form-group">
              <label for="DonViDinhLuongID">Đơn vị định lượng</label>
              <input type="text" name="DonViDinhLuong" value="{{info.DonViDinhLuong}}" class="form-control" id="DonViDinhLuongID">
          </div>
          
       
        <button type="submit" class="btn btn-primary">Submit</button>
        </form>
  </div>
</div>