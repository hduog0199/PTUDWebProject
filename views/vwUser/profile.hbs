<div class="card">
  <h5 class="card-header">Thông tin cơ bản</h5>
  <div class="card-body">
        <form method="post">
          <div class="form-group">
              <label for="cmndID">CMND</label>
              <input type="text" value="{{user.CMND}}" readonly class="form-control" >
          </div>
           <div class="form-group">
              <label for="tenID">Role</label>
              {{#if isAdmin}}
                <input type="text" readonly value="Admin" class="form-control" >
              {{else if isManager}}
                <input type="text" readonly value="Manager" class="form-control" >
              {{else}}
                <input type="text" readonly value="User" class="form-control" >

                <label>Họ và tên</label>
                <input type="text" readonly value="{{user.Ten}}" class="form-control" >

                <label>Địa chỉ</label>
                <input type="text" readonly value="{{user.DiaChi}}" class="form-control" >
              {{/if}}
          </div>
        
        </form>
  </div>
</div>